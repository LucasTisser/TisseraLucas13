<div class="container my-5">
    <div class="bg-light">
        <h1>REGISTER</h1>
        <br>
        <form class="form" action="/api/usuarios/register" method="POST" role="form">
            <div class="form-group">
                <input id="username" name="username" placeholder="username" class="form-control mb-4" type="text" required>
            </div>
            <div class="form-group">
                <input id="password" name="password" placeholder="password" class="form-control mb-4" type="text" required>
            </div>
            <div class="form-group">
                <input class="btn btn-success my-3" type="submit" value="Register">
            </div>
        </form>
        <br>
        <div class="text-left">
            <button class="btn btn-success my-3" onclick="location.href = '/api/usuarios/login'">Ir a Login</button>
        </div>
    </div>
</div>